#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include<bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    string s;
    int count=0;
    getline(cin,s);
    for(int i=0;i<s.length();i++)
    {
        if(s[i]>='a' && s[i]<='z') {
            s[i]=s[i]-32;
            count++;
        }
    }
    cout<<s<<endl<<count;
    return 0;
}
